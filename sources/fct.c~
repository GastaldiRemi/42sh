#include "allum.h"

void		my_putchar(char c)
{
  write(1, &c, 1);
}

void		my_puterror(char *str)
{
  write(1, str, my_strlen(str));
}

void		my_putstr(char *str)
{
  int		i;

  i = 0;
  while (str[i] != '\0')
    {
      my_putchar(str[i]);
      i++;
    }
}

int		my_strlen(char *str)
{
  int		i;

  i = 0;
  while (str[i] != '\0')
    i++;
  return (i);
}

void		my_putnbr(int nb)
{
  int		div;

  div = 1;
  if (nb < 0)
    {
      my_putchar('-');
      nb = nb * -1;
    }
  while ((nb / div) >= 10)
    div = div * 10;
  while (div >= 1)
    {
      my_putchar((nb / div) % 10 + 48);
      div = div / 10;
    }
}
